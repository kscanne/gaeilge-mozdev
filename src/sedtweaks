#!/bin/bash
cat aistr.txt | sed 's/.*/<li>&<\/li>/' | tr -d "\n" | LC_ALL=C sed 's/^/<!ENTITY credit.translation "<h3>AistritheoirÌ<\/h3><ul>/; s/$/<\/ul>">\n/' | iconv -f iso-8859-1 -t utf-8 > aistr.8.txt
echo "Applying sed tweaks..."
sed -i '/^-->/r aistr.8.txt' browser-ga-IE/chrome/browser/credits.dtd
rm -f aistr.8.txt
sed -i '/>Name Here</s/.*/<!ENTITY credit.translation\n  "<h3>Translators<\/h3><ul><li>Name Here<\/li><\/ul>">/' browser-ga-IE/chrome/browser/credits.dtd
sed -i '/^<!ENTITY credit.translation "">/d' browser-ga-IE/chrome/browser/credits.dtd

sed -i '/^VK_ALT=/s/.*/VK_ALT=\\u0007/' toolkit-ga-IE/chrome/global-platform/mac/platformKeys.properties
sed -i '/cmd_cut_accesskey/s/.*/cmd_cut_accesskey=g/' browser-ga-IE/chrome/browser/bookmarks/bookmarks.properties
sed -i '/cmd_bm_newseparator_accesskey/s/.*/cmd_bm_newseparator_accesskey=t/' browser-ga-IE/chrome/browser/bookmarks/bookmarks.properties
sed -i '/cmd_bm_newbookmark_accesskey/s/.*/cmd_bm_newbookmark_accesskey=N/' browser-ga-IE/chrome/browser/bookmarks/bookmarks.properties
sed -i '/cmd_bm_collapsefolder_accesskey/s/.*/cmd_bm_collapsefolder_accesskey=L/' browser-ga-IE/chrome/browser/bookmarks/bookmarks.properties

# WINDOW SIZES!
sed -i 's/\(ENTITY window\..*idth\).*/\1 "50em">/' browser-ga-IE/chrome/browser/preferences/connection.dtd
sed -i 's/\(ENTITY window\..*idth\).*/\1 "48em">/' browser-ga-IE/chrome/browser/preferences/fonts.dtd
sed -i '/prefWindow\.styleWin /s/height: ..em/height: 40em/' browser-ga-IE/chrome/browser/preferences/preferences.dtd

# still need these two with latest translate toolkit
sed -i '/^VK_HOME/s/.*/VK_HOME=Home/' toolkit-ga-IE/chrome/global/keys.properties
sed -i '/^en=/s/.*/en=en-US/' toolkit-ga-IE/chrome/global/accept2locale.properties
LC_ALL=C sed -i '
/^ar=/s/.*/ar=Araibis/
/^bn=/s/.*/bn=Beang√°ilis/
/^el=/s/.*/el=Gr√©igis/
/^gu=/s/.*/gu=G√∫isear√°itis/
/^he=/s/.*/he=Eabhrais/
/^hy=/s/.*/hy=Airm√©inis/
/^ja=/s/.*/ja=Seap√°inis/
/^ka=/s/.*/ka=Seoirsis/
/^ko=/s/.*/ko=C√≥ir√©is/
/^ml=/s/.*/ml=Mail√©alaimis/
/^ru=/s/.*/ru=R√∫isis/
/^ta=/s/.*/ta=Tamailis/
/^th=/s/.*/th=T√©alainnis/
/^tr=/s/.*/tr=Tuircis/
/^uk=/s/.*/uk=√öcr√°inis/
/^zh=/s/.*/zh=S√≠nis/
' toolkit-ga-IE/chrome/global/languageNames.properties
